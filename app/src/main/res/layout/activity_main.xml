<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.ucla.derrickchang.weather.MainActivity">

    <android.support.v7.widget.Toolbar android:id="@+id/my_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    android:elevation="20dp"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/now_layout_hight"
        android:background="@color/sunshine_blue">

        <TextView
            android:text="@string/now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView0"
            android:layout_weight="2"
            android:textSize="36sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"/>

        <TextView
            android:text="@string/default_ambient_temp_str"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ambient_temp"
            android:layout_weight="1"
            android:textSize="60sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/mon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_weight="1"
            android:textSize="@dimen/day_fontsize"
            android:textColor="@color/grey_700"
            android:fontFamily="sans-serif-condensed"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMon"
            android:layout_weight="2"
            android:textSize="@dimen/temp_fontsize"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/tue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:textSize="@dimen/day_fontsize"
            android:textColor="@color/grey_700"
            android:fontFamily="sans-serif-condensed"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTue"
            android:layout_weight="2"
            android:textSize="@dimen/temp_fontsize"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/wed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textVie3"
            android:layout_weight="1"
            android:textSize="@dimen/day_fontsize"
            android:textColor="@color/grey_700"
            android:fontFamily="sans-serif-condensed"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewWed"
            android:layout_weight="2"
            android:textSize="@dimen/temp_fontsize"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/thu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textVie4"
            android:layout_weight="1"
            android:textSize="@dimen/day_fontsize"
            android:textColor="@color/grey_700"
            android:fontFamily="sans-serif-condensed"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewThu"
            android:layout_weight="2"
            android:textSize="@dimen/temp_fontsize"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/fri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textVie5"
            android:layout_weight="1"
            android:textSize="@dimen/day_fontsize"
            android:textColor="@color/grey_700"
            android:fontFamily="sans-serif-condensed"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewFri"
            android:layout_weight="2"
            android:textSize="@dimen/temp_fontsize"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>

</LinearLayout>

