<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.ucla.derrickchang.weather.MainActivity">

    <android.support.v7.widget.Toolbar android:id="@+id/my_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    android:elevation="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:text="@string/now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView0"
            android:layout_weight="2"
            android:textSize="36sp"/>

        <TextView
            android:text="@string/default_ambient_temp_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ambient_temp"
            android:layout_weight="1"
            android:textSize="60sp"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/mon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_weight="1"
            android:textSize="@dimen/day_fontsize"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMon"
            android:layout_weight="2"
            android:textSize="@dimen/temp_fontsize"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/tue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:textSize="@dimen/day_fontsize"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTue"
            android:layout_weight="2"
            android:textSize="@dimen/temp_fontsize"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/wed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textVie3"
            android:layout_weight="1"
            android:textSize="@dimen/day_fontsize"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewWed"
            android:layout_weight="2"
            android:textSize="@dimen/temp_fontsize"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/thu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textVie4"
            android:layout_weight="1"
            android:textSize="@dimen/day_fontsize"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewThu"
            android:layout_weight="2"
            android:textSize="@dimen/temp_fontsize"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/fri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textVie5"
            android:layout_weight="1"
            android:textSize="@dimen/day_fontsize"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewFri"
            android:layout_weight="2"
            android:textSize="@dimen/temp_fontsize"/>
    </LinearLayout>

</LinearLayout>

